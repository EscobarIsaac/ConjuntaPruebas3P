@model TDD.Data.Cliente

@{
    ViewData["Title"] = "Cliente";
}

<head>
    <meta charset="utf-8" id="metaCharset" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" id="metaViewport" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" id="bootstrapCSS" />

    <!-- Bootstrap Icons (opcional) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" id="bootstrapIcons" />
</head>

<body>
    <div class="container mt-4" id="container">
        <h1 class="text-center text-primary" id="tituloPrincipal"><i class="bi bi-person"></i> Cliente</h1>
        <h4 class="text-secondary" id="subtitulo">Información del Cliente</h4>
        <hr id="separador" />

        <div class="card shadow-lg p-4" id="cardFormulario">
            <form asp-action="Create" id="formularioCliente">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" id="validacionResumen"></div>

                <div class="row g-3" id="filaFormulario">
                    <!-- Primera columna -->
                    <div class="col-md-6" id="columna1">

                        <!-- Validación para Cédula -->
                        <div class="mb-3" id="grupoCedula">
                            <label asp-for="Cedula" class="form-label fw-bold" id="etiquetaCedula"></label>
                            <input asp-for="Cedula" class="form-control" placeholder="Ingrese la cédula" id="inputCedula"
                                   required
                                   minlength="10"
                                   maxlength="10"
                                   pattern="\d{10}"
                                   oninvalid="this.setCustomValidity('La cédula debe tener 10 dígitos numéricos.')"
                                   oninput="this.setCustomValidity('')" />
                            <span asp-validation-for="Cedula" class="text-danger" id="validacionCedula"></span>
                        </div>

                        <!-- Validación para Apellidos -->
                        <div class="mb-3" id="grupoApellidos">
                            <label asp-for="Apellidos" class="form-label fw-bold" id="etiquetaApellidos"></label>
                            <input asp-for="Apellidos" class="form-control" placeholder="Ingrese los apellidos" id="inputApellidos"
                                   required
                                   minlength="2"
                                   maxlength="50"
                                   pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ ]+"
                                   oninvalid="this.setCustomValidity('Ingrese solo letras entre 2 y 50 caracteres.')"
                                   oninput="this.setCustomValidity('')" />
                            <span asp-validation-for="Apellidos" class="text-danger" id="validacionApellidos"></span>
                        </div>

                        <!-- Validación para Nombres -->
                        <div class="mb-3" id="grupoNombres">
                            <label asp-for="Nombres" class="form-label fw-bold" id="etiquetaNombres"></label>
                            <input asp-for="Nombres" class="form-control" placeholder="Ingrese los nombres" id="inputNombres"
                                   required
                                   minlength="2"
                                   maxlength="50"
                                   pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ ]+"
                                   oninvalid="this.setCustomValidity('Ingrese solo letras entre 2 y 50 caracteres.')"
                                   oninput="this.setCustomValidity('')" />
                            <span asp-validation-for="Nombres" class="text-danger" id="validacionNombres"></span>
                        </div>

                        <!-- Validación para Fecha de Nacimiento -->
                        <div class="mb-3" id="grupoFechaNacimiento">
                            <label asp-for="FechaNacimiento" class="form-label fw-bold" id="etiquetaFechaNacimiento"></label>
                            <input asp-for="FechaNacimiento" type="date" class="form-control" id="inputFechaNacimiento"
                                   required
                                   oninvalid="this.setCustomValidity('La fecha de nacimiento es obligatoria.')"
                                   oninput="this.setCustomValidity('')" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger" id="validacionFechaNacimiento"></span>
                        </div>

                    </div>

                    <!-- Segunda columna -->
                    <div class="col-md-6" id="columna2">
                        <!-- Validación para Correo Electrónico -->
                        <div class="mb-3" id="grupoMail">
                            <label asp-for="Mail" class="form-label fw-bold" id="etiquetaMail"></label>
                            <input asp-for="Mail" type="email" class="form-control" placeholder="correo@ejemplo.com" id="inputMail"
                                   required
                                   oninvalid="this.setCustomValidity('Ingrese un correo electrónico válido.')"
                                   oninput="this.setCustomValidity('')" />
                            <span asp-validation-for="Mail" class="text-danger" id="validacionMail"></span>
                        </div>

                        <!-- Validación para Teléfono -->
                        <div class="mb-3" id="grupoTelefono">
                            <label asp-for="Telefono" class="form-label fw-bold" id="etiquetaTelefono"></label>
                            <input asp-for="Telefono" class="form-control" placeholder="Ingrese el teléfono" id="inputTelefono"
                                   required
                                   minlength="10"
                                   maxlength="10"
                                   pattern="\d{10}"
                                   oninvalid="this.setCustomValidity('El teléfono debe tener 10 dígitos numéricos.')"
                                   oninput="this.setCustomValidity('')" />
                            <span asp-validation-for="Telefono" class="text-danger" id="validacionTelefono"></span>
                        </div>

                        <!-- Validación para Dirección -->
                        <div class="mb-3" id="grupoDireccion">
                            <label asp-for="Direccion" class="form-label fw-bold" id="etiquetaDireccion"></label>
                            <textarea asp-for="Direccion" class="form-control" rows="2" placeholder="Ingrese la dirección" id="inputDireccion"
                                      required
                                      minlength="5"
                                      maxlength="100"
                                      oninvalid="this.setCustomValidity('La dirección es obligatoria y debe tener entre 5 y 100 caracteres.')"
                                      oninput="this.setCustomValidity('')"></textarea>
                            <span asp-validation-for="Direccion" class="text-danger" id="validacionDireccion"></span>
                        </div>

                        <!-- Estado (no requiere validación) -->
                        <div class="form-check mb-3" id="grupoEstado">
                            <input class="form-check-input" type="checkbox" asp-for="Estado" id="inputEstado" />
                            <label class="form-check-label fw-bold" id="etiquetaEstado">@Html.DisplayNameFor(model => model.Estado)</label>
                        </div>

                    </div>

                    <!-- Botones de acción -->
                    <div class="d-flex justify-content-center gap-3 mt-4" id="grupoBotones">
                        <button type="submit" class="btn btn-primary" id="botonGuardar">
                            <i class="bi bi-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary" id="botonVolver">
                            <i class="bi bi-arrow-left"></i> Volver a la lista
                        </a>
                    </div>

                </div>

            </form>
        </div>
    </div>

    <!-- Bootstrap JS Bundle (con Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" id="bootstrapJS"></script>
</body>