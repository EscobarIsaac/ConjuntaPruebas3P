@model TDD.Data.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" id="bootstrapCSS" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>

<body>
    <div class="container">
        <h1><i class="bi bi-pencil-square"></i> Editar Cliente</h1>
        <h4 style="text-align: center; color: #6c757d;">Modifica los datos del cliente</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" style="color: red;"></div>

            <!-- Código (solo lectura) -->
            <div class="form-group">
                <label asp-for="Codigo"></label>
                <input asp-for="Codigo" readonly class="form-control" />
            </div>

            <!-- Validación para Cédula -->
            <div class="form-group">
                <label asp-for="Cedula"></label>
                <input asp-for="Cedula" class="form-control"
                       required
                       minlength="10"
                       maxlength="10"
                       pattern="\d{10}"
                       oninvalid="this.setCustomValidity('La cédula debe tener 10 dígitos numéricos.')"
                       oninput="this.setCustomValidity('')" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <!-- Validación para Apellidos -->
            <div class="form-group">
                <label asp-for="Apellidos"></label>
                <input asp-for="Apellidos" class="form-control"
                       required
                       minlength="2"
                       maxlength="50"
                       pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ ]+"
                       oninvalid="this.setCustomValidity('Ingrese solo letras tener entre 2 y 50 caracteres.')"
                       oninput="this.setCustomValidity('')" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <!-- Validación para Nombres -->
            <div class="form-group">
                <label asp-for="Nombres"></label>
                <input asp-for="Nombres" class="form-control"
                       required
                       minlength="2"
                       maxlength="50"
                       pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ ]+"
                       oninvalid="this.setCustomValidity('Ingrese solo letras entre 2 y 50 caracteres.')"
                       oninput="this.setCustomValidity('')" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <!-- Validación para Fecha de Nacimiento -->
            <div class="form-group">
                <label asp-for="FechaNacimiento"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control"
                       required
                       oninvalid="this.setCustomValidity('La fecha de nacimiento es obligatoria.')"
                       oninput="this.setCustomValidity('')" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <!-- Validación para Correo Electrónico -->
            <div class="form-group">
                <label asp-for="Mail"></label>
                <input asp-for="Mail" type="email" class="form-control"
                       required
                       oninvalid="this.setCustomValidity('Ingrese un correo electrónico válido.')"
                       oninput="this.setCustomValidity('')" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <!-- Validación para Teléfono -->
            <div class="form-group">
                <label asp-for="Telefono"></label>
                <input asp-for="Telefono" class="form-control"
                       required
                       minlength="10"
                       maxlength="10"
                       pattern="\d{10}"
                       oninvalid="this.setCustomValidity('El teléfono debe tener 10 dígitos numéricos.')"
                       oninput="this.setCustomValidity('')" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <!-- Validación para Dirección -->
            <div class="form-group">
                <label asp-for="Direccion"></label>
                <textarea asp-for="Direccion" rows="2" class="form-control"
                          required
                          minlength="5"
                          maxlength="100"
                          oninvalid="this.setCustomValidity('La dirección es obligatoria y debe tener entre 5 y 100 caracteres.')"
                          oninput="this.setCustomValidity('')"></textarea>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <!-- Estado (no requiere validación) -->
            <div class="form-check">
                <input type="checkbox" asp-for="Estado" class="form-check-input" />
                <label class="form-check-label">@Html.DisplayNameFor(model => model.Estado)</label>
            </div>

            <!-- Botones de acción -->
            <div class="btn-container mt-4">
                <button type="submit" id="actualizar" class="btn btn-warning">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS Bundle (con Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>